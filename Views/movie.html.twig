{% extends "partials/base.html.twig" %}

{% block title %}Movie list{% endblock %}

{% block body %}
    <div class="container text-center mb">
        <h2>Movie list</h2>
        <div class="row pt-5">
            {% for id, movie in arrayMovies %}
                <div class="col-md-3">
                    <div class="card text-white text-center bg-dark mb-4">
                        <img class="card-img-top img-responsive" src="{{ baseUrl }}/Uploads/posters/{{ movie.poster }}"
                             alt="{{ movie.title }}">
                        <div class="card-body">
                            <p class="card-text bg-dark text-white ">{{ movie.title }}</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item bg-dark text-white">{{ movie.release_year }}</li>
                            <li class="list-group-item bg-dark text-white text-uppercase">
                              <a href="{{ baseUrl }}/movie/{{ id }}">READ MORE...</a>
                            </li>
                        </ul>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
