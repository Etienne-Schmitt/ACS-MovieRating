{% extends "partials/base.html.twig" %}

{% block title %}Movie list{% endblock %}

{% block body %}
    
<div class="container text-center mtop2 mb ">
<h2 class=" mt-5">List of Movies</h2>
   <div class="row ">     
 {% for movie in arrayMovies %}
 <div class="col-md-3">
<div class="card text-white text-center border border-white bg-dark mb-4">
  <img class="card-img-top img-responsive" src="{{ baseUrl }}/Uploads/posters/{{ movie.poster }}" >
    <div class="card-body">
        <p class="card-text bg-dark text-white ">{{ movie.title}}</p>
    </div>
  <ul class="list-group list-group-flush">
   
     <li class="list-group-item bg-dark text-white">{{ movie.releaseYear }}</li>
    <li class="list-group-item bg-dark text-white text-uppercase"><a href="#">READ MORE...</a></li>
  </ul>  
</div>
</div>
 {% endfor %}
 </div>
 </div> 
{% endblock %}

{% block javascripts %}
{% endblock %}
