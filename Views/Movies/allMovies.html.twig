{% extends "partials/base.html.twig" %}

{% block title %}Movies Database{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ baseUrl }}/assets/css/style.css">
{% endblock %}

{% block header %}
{% endblock %}

{% block body %}
<h1>Your Favorite Movies Database</h1>
<div class="back_page">
  <div class="container">
    <div class="row pt-4">
      {% for exemple in result %}
      <div class="col-md-3 pb-4">
        <div class="card text-white bg-dark">
          <a href="{{baseUrl}}/movies/show/{{exemple.id_film}}">
            <img src='{{ baseUrl }}/Uploads/posters/{{ exemple.affiche }}' class="card-img-top img-fluid" alt="poster {{ exemple.titre }}">
          </a>
          <div class="card-body">
            <h5 class="card-title">{{ exemple.titre }}</h5>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
{% endblock %}

{% block footer %}
{% endblock %}

{% block javascripts %}
{% endblock %}