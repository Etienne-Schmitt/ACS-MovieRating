{% extends "partials/base.html.twig" %}

{% block title %}Genre{% endblock %}

{% block body %}
    <div class="container text-center ">
        <h2>Genres:</h2>
        <table class="w-50 mx-auto bg-white table table-striped table-sm table-hover text-center">
            <thead>
            <tr>
                <th scope="col">Genre</th>
            </tr>
            </thead>
            {% for id, genre in arrayGenres %}
                <tbody>
                <tr>
                    <td>{{ genre }}</td>
                </tr>
                </tbody>
            {% endfor %}
        </table>
    </div>
{% endblock %}