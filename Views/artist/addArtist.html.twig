             
{% extends "partials/base.html.twig" %}

{% block title %}Add new Genre{% endblock %}


{% block stylesheets %}
<link rel="stylesheet" href="assets/css/style.css" />
{% endblock %}



{% block body %}

<form action="" method="post">
  <div class="form-group row">
    <label for="inputfirstname" class="col-sm-2 col-form-label">First name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="firstname_artist" placeholder="First name">
    </div>
  </div>
  <div class="form-group row">
    <label for="inputlastname" class="col-sm-2 col-form-label">Last name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="lastname_artist" placeholder="Last name">
    </div>
  </div>
  
<div id="calendarMain" class="calendarMain"></div>

  <div class="form-group row"  >
    <label for="inputbirthday" class="col-sm-2 col-form-label">Birth day</label>
    <div class="col-sm-10">
      <input type="date" class="form-control" name="birth_date" placeholder="JJ/MM/AAAA">
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">Insert</button>
    </div>
  </div>
</form>

{% endblock %}

{% block footer %}
{% endblock %}

